<h2>Lista de Postagens</h2>
<hr>
<a class="btn btn-success"
    href="/admin/posts/add">
    Nova Postagem
</a>

{{#each posts}}
    <div class="card mt-4">
        <div class="card-body">
            <h3>{{this.titulo}}</h3>
            <h4>{{this.categoria.nome}}</h4>
            <h5>{{this.descricao}}</h5>
            <small>Slug: {{this.slug}}</small>
        </div>
        <div class="card-footer">
            <a class="btn btn-primary"
                href="/admin/posts/edit/{{this._id}}">
                Editar Postagem
            </a>

            <a class="btn btn-danger"
                href="/admin/posts/delete/{{this._id}}">
                Deletar Postagem
            </a>
        </div>
    </div>
{{else}}
    <h4 class="mt-4">
        Nenhuma Postagem cadastrada!
    </h4>
{{/each}}