<h2>Lista de Categorias</h2>
<hr>
<a class="btn btn-success"
    href="/admin/categories/add">
    Nova Categoria
</a>

{{#each categories}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{this.nome}}</h4>
            <small>Slug: {{this.slug}}</small>
            <br>
            <small>Criada em: {{this.date}}</small>
            <br>
        </div>

        <div class="d-flex card-footer justify-content-end">
            <a class="btn btn-primary mr-3"
                href="/admin/categories/edit/{{this._id}}">
                Editar Categoria
            </a>

            <form action="/admin/categories/delete"
                method="POST"
                class="ml-3">
                <input type="hidden"
                    name="id"
                    value="{{this._id}}" />
                <button type="submit"
                    class="btn btn-danger">
                    Deletar Categoria
                </button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-4">
        Nenhuma Categoria cadastrada!
    </h4>
{{/each}}